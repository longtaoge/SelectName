<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.xiangbalao.selectname"
    android:versionCode="1"
    android:versionName="0.3.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="org.xiangbalao.selectname.app.Mapplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
        <uses-library android:name="android.test.runner" />


        <activity
            android:name="org.xiangbalao.selectname.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.xiangbalao.selectname.ui.SelectActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="org.xiangbalao.selectname.ui.NameListActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name="org.xiangbalao.selectname.ui.NameList1Activity"
            android:screenOrientation="portrait" />

        <activity
            android:name="org.xiangbalao.selectname.ui.NameDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="org.xiangbalao.selectname.ui.TheoryShowActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="org.xiangbalao.selectname.ui.ChooseNameActivity"
            android:screenOrientation="portrait" />


    </application>


</manifest>